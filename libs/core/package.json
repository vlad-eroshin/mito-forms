{
  "name": "@mito-forms/core",
  "version": "0.2.16-beta",
  "description": "Declarative Forms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "tsc --build && sass --no-source-map --style=compressed src/core-styles.scss ../../dist/core/core.css",
    "dev": "webpack serve --mode development",
    "package": "npm pack",
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint ./src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier './**/*.{js,jsx,ts,tsx,css,md,json}' --write",
    "clean": "rm -rf dist node_modules package-lock.json && echo 'âœ… Project cleaned. Run npm install or yarn install.'",
    "build:beforePublish": "tsc --project ./tsconfig.json --outDir ./dist && sass --no-source-map --style=compressed src/core-styles.scss dist/core/core.css",
    "publish:core": "pnpm run build:beforePublish && pnpm publish --access public"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Vladislav Eroshin",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core.css": "./dist/core/core.css",
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "jmespath": "^0.16.0",
    "ramda": "^0.30.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intl": "7.1.6",
    "uuid-by-string": "^4.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/jmespath": "^0.15.2",
    "@types/node": "^22.14.1",
    "@types/ramda": "^0.30.2",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "prop-types": "^15.8.1",
    "sass": "^1.86.3",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "turbo": {
    "outputs": [
      "dist/**"
    ]
  }
}
